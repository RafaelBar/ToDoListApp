<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TaskListActivity"
    android:clickable="false"
    android:background="#000000">

    <TextView android:text="To Do List App" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:allowUndo="false"
        android:textColor="#d2d2d2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:textSize="80px"
        android:id="@+id/textView"
        android:autoText="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Task"
        android:id="@+id/button"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:height="80px"
        android:width="400px"
        android:textColor="#7a7a7a"
        android:textSize="50px"
        android:layout_marginTop="20px"
        android:background="#c4c4c4"
        android:textAlignment="center"
        android:textStyle="bold"
        android:paddingTop="10px"
        android:onClick="goToCreate"
        android:enabled="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#737373" />

</RelativeLayout>
